@model Projekt2.Models.Dostawy

@{
    ViewData["Title"] = "Dostawy - Dodawanie danych";
}

<h1>Dostawy - Dodawanie danych</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Ilosc_towaru" class="control-label"></label>
                <input asp-for="Ilosc_towaru" class="form-control" />
                <span asp-validation-for="Ilosc_towaru" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Data_dostawy" class="control-label"></label>
                <input asp-for="Data_dostawy" type="date" class="form-control" />
                <span asp-validation-for="Data_dostawy" class="text-danger"></span>
            </div>
            <div class="form-group">
				<label asp-for="Id_dostawcy" class="control-label"></label>
                <select asp-for="Id_dostawcy" class="form-control" asp-items="@ViewBag.Id_dostawcy">
                </select>
                <span asp-validation-for="Id_dostawcy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Wróć do listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
