@model Projekt2.Models.Dostawy

@{
    ViewData["Title"] = "Dostawy - Szczegółowe informacje";
}

<h1>Dostawa @Html.DisplayFor(model => model.Id_dostawy) - Szczegółowe informacje</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id_dostawy)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id_dostawy)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ilosc_towaru)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ilosc_towaru)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Data_dostawy)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Data_dostawy)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Dostawca)
        </dt>
        <dd class="col-sm-10" onclick="location.href='@Url.Action("Details", "Dostawcy", new { id = Model.Id_dostawcy })'" style="cursor:pointer;">
            @Html.DisplayFor(model => model.Dostawca.Name) @Html.DisplayFor(model => model.Dostawca.Surname)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id_dostawy">Edytuj</a> |
    <a asp-action="Delete" asp-route-id="@Model?.Id_dostawy">Usuń</a> |
    <a asp-action="Index">Wróć do listy</a> |
    <a href="#" onclick="history.back()">Cofnij do poprzedniej strony</a>
</div>
