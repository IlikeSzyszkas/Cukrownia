@model Projekt2.Models.Pracownicy

@{
    ViewData["Title"] = "Pracownicy - Szczegółowe Informacje";
}

<h1>Pracownicy - Szczegółowe Informacje</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Surname)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Surname)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Addres)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Addres)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nr_tel)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nr_tel)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Stanowisko)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Stanowisko.Nazwa)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Dzial)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Dzial.Nazwa)
        </dd>
        <dt class="col-sm-2">
            Zmiany
        </dt>
        <dd class="col-sm-10">
        @{
            if(Model.Stanowisko.Nazwa == "Kierownik")
            {
                switch (Model.Dzial.Nazwa)
                {
                    case "Pakownia":
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Ilość towaru wejściowego [kg]</th>
                                    <th>Ilość towaru wyjściowego [opakowania]</th>
                                    <th>Data</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var zmiana in Model.Zmiany_pak)
                                {
                                    <tr onclick="location.href='@Url.Action("Details", "Pakownia", new { id = zmiana.Id_partii })'" style="cursor:pointer;">
                                        <td>@zmiana.Id_partii</td>
                                        <td>@zmiana.Ilosc_towaru_wejscowego</td>
                                        <td>@zmiana.Ilosc_towaru_wyjscowego</td>
                                        <td>@zmiana.Data_zmiany</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        break;
                    case "Produktownia":
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Ilość towaru wejściowego [kg]</th>
                                    <th>Ilość towaru wyjściowego [kg]</th>
                                    <th>Data</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var zmiana in Model.Zmiany_prod)
                                {
                                    <tr onclick="location.href='@Url.Action("Details", "Pakownia", new { id = zmiana.Id_partii })'" style="cursor:pointer;">
                                        <td>@zmiana.Id_partii</td>
                                        <td>@zmiana.Ilosc_towaru_wejscowego</td>
                                        <td>@zmiana.Ilosc_towaru_wyjscowego</td>
                                        <td>@zmiana.Data_zmiany</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        break;
                    default: 
                        <p>Błąd</p>
                    break;
                }
            }
        }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edytuj</a> |
    <a asp-action="Index">Wróć do listy</a>
</div>
