@model Projekt2.Models.Pracownicy

@{
    ViewData["Title"] = "Pracownicy - Zmiana informacji";
}

<h1>Pracownicy - Zmiana informacji</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" type="text" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label"></label>
                <input asp-for="Surname" type="text" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Addres" class="control-label"></label>
                <input asp-for="Addres" type="text" class="form-control" />
                <span asp-validation-for="Addres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nr_tel" class="control-label"></label>
                <input asp-for="Nr_tel" type="tel" class="form-control" />
                <span asp-validation-for="Nr_tel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Id_stanowiska" class="control-label"></label>
                <select asp-for="Id_stanowiska" class="form-control" asp-items="@ViewBag.Id_stanowiska">
                </select>
                <span asp-validation-for="Id_stanowiska" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Id_dzialu" class="control-label"></label>
                <select asp-for="Id_dzialu" class="form-control" asp-items="@ViewBag.Id_dzialu">
                </select>
                <span asp-validation-for="Id_dzialu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Wróć do listy</a> |
    <a href="#" onclick="history.back()">Cofnij do poprzedniej strony</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
