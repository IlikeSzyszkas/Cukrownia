@model IEnumerable<Projekt2.Models.Magazyn_sprzedarz>

@{
    ViewData["Title"] = "Magazyn -> Sprzedarz";
}

<h1>Magazyn -&gt Sprzedarz</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id_operacji)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Id_transakcji)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ilosc_opakowan_sprzedanych)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id_operacji)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Id_transakcji)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ilosc_opakowan_sprzedanych)
            </td>
            <td>
                <a class="btn btn-info"  asp-action="Details" asp-route-id="@item.Id">Details</a> |
            </td>
        </tr>
}
    </tbody>
</table>
