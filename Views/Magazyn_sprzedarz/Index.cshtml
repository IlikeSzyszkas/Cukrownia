                @Html.DisplayFor(modelItem => item.Id_operacji)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Id_transakcji)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ilosc_opakowan_sprzedanych)
            </td>
            <td>
            </td>
        </tr>
}
    </tbody>
</table>
