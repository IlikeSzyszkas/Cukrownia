@model IEnumerable<Projekt2.Models.Sprzedarz>

@{
    ViewData["Title"] = "Sprzedaż";
}

<h1>Sprzedaż</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Dodaj nową transakcję</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id_transakcji)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ilosc_opakowan)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data_odbioru)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kupiec)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr onclick="location.href='@Url.Action("Details", "Sprzedarz", new { id = item.Id_transakcji })'" style="cursor:pointer;">
            <td>
                    @Html.DisplayFor(modelItem => item.Id_transakcji)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ilosc_opakowan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data_odbioru)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kupiec.Nazwa)
            </td>
            <td>
                <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@item.Id_transakcji">Edytuj</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id_transakcji">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
