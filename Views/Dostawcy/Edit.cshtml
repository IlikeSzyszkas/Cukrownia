@model Projekt2.Models.Dostawcy

@{
    ViewData["Title"] = "Dostawcy - Zmiana informacji";
}

<h1>Dostawcy - Zmiana informacji</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" type="text"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label"></label>
                <input asp-for="Surname" class="form-control" type="text"/>
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Addres" class="control-label"></label>
                <input asp-for="Addres" class="form-control" type="text"/>
                <span asp-validation-for="Addres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nr_tel" class="control-label"></label>
                <input asp-for="Nr_tel" class="form-control" type="tel"/>
                <span asp-validation-for="Nr_tel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ilosc_ha_pola" class="control-label"></label>
                <input asp-for="Ilosc_ha_pola" class="form-control" type="number" min="0" max="1000" />
                <span asp-validation-for="Ilosc_ha_pola" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Wróć do listy</a> |
    <a href="#" onclick="history.back()">Cofnij do poprzedniej strony</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
