@model Projekt2.Models.Dostawcy

@{
    ViewData["Title"] = "Dostawcy - Dodawanie danych";
}

<h1>Dostawcy - Dodawanie danych</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" type="text" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label"></label>
                <input asp-for="Surname" type="text"  class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Addres" class="control-label"></label>
                <input asp-for="Addres" type="text"  class="form-control" />
                <span asp-validation-for="Addres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nr_tel" class="control-label"></label>
                <input asp-for="Nr_tel" class="form-control" type="tel" />
                <span asp-validation-for="Nr_tel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ilosc_ha_pola" class="control-label"></label>
                <input asp-for="Ilosc_ha_pola" class="form-control" type="number" min="0" max="1000" />
                <span asp-validation-for="Ilosc_ha_pola" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Wróć do listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
