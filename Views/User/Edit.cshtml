@model Projekt2.Models.Users

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Users</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="PasswordHash" />
            @if (User.IsInRole("admin"))
            {
                <div class="form-group">
                    <label asp-for="RoleId" class="control-label"></label>
                    <select asp-for="RoleId" class="form-control" asp-items="ViewBag.RoleId"></select>
                    <span asp-validation-for="RoleId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PracownikId" class="control-label"></label>
                    <select asp-for="PracownikId" class="form-control" asp-items="ViewBag.PracownikId"></select>
                    <span asp-validation-for="PracownikId" class="text-danger"></span>
                </div>
            }
            else
            {
                <div class="form-group">
                    <label asp-for="RoleId" class="control-label"></label>
                    <select asp-for="RoleId" class="form-control" asp-items="ViewBag.RoleId" disabled></select>
                    <span asp-validation-for="RoleId" class="text-info">Role może zmieniać tylko administrator.</span>
                </div>
                <div class="form-group">
                    <label asp-for="PracownikId" class="control-label"></label>
                    <select asp-for="PracownikId" class="form-control" asp-items="ViewBag.PracownikId" disabled></select>
                    <span asp-validation-for="PracownikId" class="text-info">Dane o osobie może zmieniać tylko administrator.</span>
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="#" onclick="history.back()">Cofnij do poprzedniej strony</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script>
    console.log(PracownikId.Value);
    PracownikId.addEventListener("change", ()=>{
        console.log(PracownikId.Value);
    });
    
    console.log(RoleId.Value);
    RoleId.addEventListener("change", ()=>{
        console.log(RoleId.Value);
    })
</script>
