@model Projekt2.Models.Users

@{
    ViewData["Title"] = "Dodawanie użytkowników";
}

<h1>Dodawanie użytkowników</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
				<label asp-for="PracownikId" class="control-label"></label>
				<select asp-for="PracownikId" id="PracownikSet" class="form-control" asp-items="ViewBag.PracownikId"></select>
			</div>
            <div class="form-group">
                Filtruj pracowników:<br />
                <label for="pracownikName" class="control-label">Imię: </label>
                <input type="text" id="pracownikName" class="form-control" />

                <label for="pracownikSurname" class="control-label">Nazwisko: </label>
                <input type="text" id="pracownikSurname" class="form-control" />
                
                <label for="pracownikStano">Stanowisko</label>
                <select id="pracownikStano" class="form-control" asp-items="ViewBag.Stanowiska">
                    <option value="">Wszystkie</option>
                </select>

                <label for="pracownikDzial">Dział</label>
                <select id="pracownikDzial" class="form-control" asp-items="ViewBag.Dzialy">
                    <option value="">Wszystkie</option>
                </select>
                
            </div>
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" id="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoleId" class="control-label"></label>
                <select asp-for="RoleId" class="form-control" asp-items="ViewBag.RoleId"></select>
            </div>
            <div class="form-group">
                <label asp-for="PasswordHash" class="control-label"></label>
                <input asp-for="PasswordHash" class="form-control" />
                <span asp-validation-for="PasswordHash" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PasswordHash" class="control-label">Powtórz hasło</label>
                <input asp-for="PasswordHash" class="form-control" />
                <span asp-validation-for="PasswordHash" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Wróć do listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script>

    document.getElementById("PracownikSet").addEventListener("change", function () {
        const pracownik = this.options[this.selectedIndex].text.trim().split(" ");
        let username = `${pracownik[1].toLowerCase()}_${pracownik[0].toLowerCase().substring(0, 1)}`;
        Username.value = username;
    });
    
    document.getElementById("pracownikFilter").addEventListener("input", function () {
        const filter = this.value.toLowerCase();
        const select = document.getElementById("PracownikSet");
        const options = select.options;

        for (let i = 0; i < options.length; i++) {
            const optionText = options[i].text.toLowerCase();
            options[i].style.display = optionText.includes(filter) ? "block" : "none";
        }
    });

    // Automatyczne uzupełnianie loginu
    document.getElementById("PracownikSet").addEventListener("change", function () {
        const pracownik = this.options[this.selectedIndex].text.trim().split(" ");
        let username = `${pracownik[1].toLowerCase()}_${pracownik[0].toLowerCase().substring(0, 1)}`;
        document.getElementById("Username").value = username;
    });
</script>
