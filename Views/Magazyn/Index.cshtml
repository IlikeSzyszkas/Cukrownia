@model IEnumerable<Projekt2.Models.Magazyn>

@{
    ViewData["Title"] = "Magazyn";
}

<h1>Magazyn</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Dodaj informacje o wpływie do magazynu</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id_operacji)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ilosc_opakowan)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data_operacji)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr onclick="location.href='@Url.Action("Details", "Magazyn", new { id = item.Id })'" style="cursor:pointer;">
            <td>
                @Html.DisplayFor(modelItem => item.Id_operacji)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ilosc_opakowan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data_operacji)
            </td>
            <td>
                <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@item.Id">Edytuj</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
