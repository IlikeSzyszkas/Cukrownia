@model Projekt2.Models.Plac_buraczany

@{
    ViewData["Title"] = "Plac buraczany - Dodawanie danych";
}

<h1>Plac buraczany - Dodawanie danych</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id_dostawy" class="control-label"></label>
                <input asp-for="Id_dostawy" type="number" class="form-control" />
                <span asp-validation-for="Id_dostawy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ilosc_burakow" class="control-label"></label>
                <input asp-for="Ilosc_burakow" type="number" min="0" class="form-control" />
                <span asp-validation-for="Ilosc_burakow" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Data_operacji" class="control-label"></label>
                <input asp-for="Data_operacji" type="date" class="form-control" />
                <span asp-validation-for="Data_operacji" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Wróć do listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
